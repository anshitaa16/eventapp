    font-size: 60px;
    line-height: 52px;
    margin-top: 20px;
    color: white;
   }
   .box #bx1 p{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 25px;
    color: white;
    margin-top: 20px;
    font-weight: 100;
    line-height: 40px;
   }
   button{
    padding: 12px;
    font-size: 15px;
    font-weight: 600;
    background-color: #ED483E;
    color: white;
    border: none;
    margin-top: 10px;
    transition: all ease 0.5s;
   }
  button:hover{
    background-color: white;
    color: #ED483E;
  }
  @media only screen and (max-width: 400px) {
  nav{
